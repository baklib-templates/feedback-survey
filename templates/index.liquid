{% assign pages = site.pages['/'].children_in_list | order_by: '-published_at' %}

<body class="min-h-screen bg-gray-50">
  <!-- Main Content -->
  <main class="container flex flex-col gap-8 px-4 py-8 mx-auto md:flex-row">
    <!-- Feedback List -->
    <section class="flex-1">
      <!-- Top bar -->
      <div class="flex flex-col gap-3 mb-4 md:flex-row md:items-center md:justify-between">
        <div
          class="bg-blue-50 border border-blue-200 rounded-2xl p-6 text-[#0a1442] text-base font-normal leading-relaxed"
          style="box-shadow:0 0 0 1px #e0e7ff;">
          <div class="mb-2">
            <span class="text-xl font-bold">{{ page.settings.slogan }}</span>
          </div>
          {{ page.settings.description }}
        </div>
      </div>

      <div class="flex items-center space-x-3">
        <!-- Top -->
        <button
          class="flex items-center px-4 py-2 rounded-lg border border-[#d1d5db] bg-white text-[#4b5563] font-semibold text-base shadow-sm hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-2 text-[#9ca3af]" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path d="M3 17l6-6 4 4 8-8" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          Top
        </button>
        <!-- New -->
        <button
          class="flex items-center px-4 py-2 rounded-lg border border-[#d1d5db] bg-white text-[#4b5563] font-semibold text-base shadow-sm hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-2 text-[#9ca3af]" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 6v6l4 2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          最新
        </button>
        <!-- Trending -->
        <button
          class="flex items-center px-4 py-2 rounded-lg border border-[#d1d5db] bg-white text-[#4b5563] font-semibold text-base shadow-sm hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-2 text-[#9ca3af]" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <path d="M13 10V3L4 14h7v7l9-11h-7z" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          热门
        </button>
        <!-- Search -->
        <button
          class="flex items-center px-4 py-2 rounded-lg border border-[#d1d5db] bg-white text-[#4b5563] font-semibold text-base shadow-sm hover:bg-gray-50 transition">
          <svg class="w-5 h-5 mr-2 text-[#9ca3af]" fill="none" stroke="currentColor" stroke-width="2"
            viewBox="0 0 24 24">
            <circle cx="11" cy="11" r="8" />
            <line x1="21" y1="21" x2="16.65" y2="16.65" />
          </svg>
          搜索
        </button>
        <!-- Filter -->
        <button
          class="flex items-center px-4 py-2 rounded-lg border border-[#d1d5db] bg-white text-[#4b5563] font-semibold text-base shadow-sm hover:bg-gray-50 transition">
          <svg class="w-5 h-5 text-[#9ca3af]" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path
              d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2a1 1 0 01-.293.707L15 13.414V19a1 1 0 01-1.447.894l-4-2A1 1 0 019 17v-3.586L3.293 6.707A1 1 0 013 6V4z"
              stroke-linecap="round" stroke-linejoin="round" />
          </svg>
        </button>
        <!-- Create New Feature Request -->
        <button
          class="flex items-center px-6 py-2 text-base font-semibold text-white bg-blue-600 rounded-lg shadow transition hover:bg-blue-700"
          data-controller="dialog-fetch"
          data-dialog-fetch-url-value="/s/new"
          data-action="click->dialog-fetch#openDialog">
          <svg class="mr-2 w-5 h-5 text-white" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" />
            <path d="M12 8v8M8 12h8" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          提交新功能建议
        </button>
      </div>
      <!-- Feedback List Items -->
      <div class="mt-4 w-full border divide-y dark:divide-border divide-gray-100/60 sm:rounded-lg">
        {% paginate_tag pages, per: 12 %}
          {% for page in pages %}
            {% render 'page', page: page %}
          {% endfor %}
        {% endpaginate_tag %}

      </div>
    </section>

    <!-- Sidebar: Most Helpful -->
    <aside class="w-full md:w-72">
      <div class="p-4 bg-white rounded shadow">
        <h2 class="mb-4 text-lg font-semibold">Most Helpful</h2>
        <ul class="space-y-2">
          <li class="flex justify-between items-center">
            <span class="text-gray-800">NecoArcLife</span>
            <span class="px-2 py-0.5 text-xs text-gray-600 bg-gray-100 rounded">651</span>
          </li>
          <li class="flex justify-between items-center">
            <span class="text-gray-800">NecoArcLife</span>
            <span class="px-2 py-0.5 text-xs text-gray-600 bg-gray-100 rounded">651</span>
          </li>
          <!-- ...more items -->
        </ul>
      </div>
    </aside>
  </main>
  <div aria-roledescription="dialog"
    id="headlessui-dialog" role="dialog" aria-modal="true" data-headlessui-state="open">
  </div>
</body>

{% schema %}
{
"name": "Index",
"description": "Community Index Page Forum Theme",
"thumb_url": "images/theme/index-forum.png",
"sub_page_templates": ["page", "roadmap"],
"settings": [
{
"id": "slogan",
"type": "text",
"label": "站点口号",
"default": "👋 A community of makers that learn and grow together"
},
{
"id": "description",
"type": "html",
"label": "t:settings_schema.generic.settings.description.label",
"default": "👋 Our landing page template works on all devices, so you only have to set it up once, and get beautiful results forever."
},
{
"id": "tags",
"type": "tag_picker",
"multiple": true,
"label": "站点热门标签"
},
{
"id": "text_color",
"type": "color",
"label": "Hero 文字颜色"
},
{
"id": "bg_color",
"label": "Hero 背景色",
"type": "color_background"
},
{
"id": "illustration_url",
"type": "image_picker",
"ratio": "16:9",
"width": 400,
"label": "Hero 背景插图（SVG）",
"info": "虚幻背景SVG格式，参考："
},
{
"id": "hero_url",
"type": "image_picker",
"ratio": "4:3",
"width": 400,
"label": "Hero Banner 图片（PNG）",
"info": "PNG 透明背景格式，参考："
}
]
}
{% endschema %}
