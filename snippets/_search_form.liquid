<!-- Search form -->
{% form_tag 'search' %}
    <div class="flex flex-wrap">
        <div class="w-full">
            <label class="block text-sm sr-only" for="search">{{ 'generic.search' | t }}</label>
            <div class="relative flex items-center">
                <input type="search" id="search" name="{{ form.keywords_field_name }}" value="{{ search.keywords | escape_once }}" class="w-full py-2 pl-10 rounded-full border bg-transparent border-primary focus:border-2" placeholder="{{ 'generic.search_from' | t }}" />
                <div class="absolute inset-0 right-auto flex items-center justify-center">
                    <svg class="w-4 h-4 mx-3 shrink-0" viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
                        <path class="fill-slate-600" d="M7 14c-3.86 0-7-3.14-7-7s3.14-7 7-7 7 3.14 7 7-3.14 7-7 7zM7 2C4.243 2 2 4.243 2 7s2.243 5 5 5 5-2.243 5-5-2.243-5-5-5zm8.707 12.293a.999.999 0 11-1.414 1.414L11.9 13.314a8.019 8.019 0 001.414-1.414l2.393 2.393z" />
                    </svg>  
                </div>
            </div>
        </div>
    </div>
{% endform_tag %}